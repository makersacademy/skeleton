.email-capture-row
  %form.email-capture
    %label{for: "newsletter-email"}
    %input{type: "email", id: "newsletter-email", placeholder: "Your Email Address", required: true, 'data-segments': locals.fetch(:segments, "General") }
    %input.button.button--horizontal{type: "submit", value: locals.fetch(:button_text, "Send my e-book") }
