- comparisons ||= :comparisons
%table.comparison-table.comparison-table--mobile
  %thead
    %tr
      %th.comparison-header.comparison-header--onsite
        .comparison-header__image{ style: "background-image: url(#{image_path("logo/ma-wordmark-white.png")});"}
      %th.comparison-header.comparison-header--remote
        .comparison-header__image{ style: "background-image: url(#{image_path("logo/ronin-wordmark-white.png")});"}
  %tbody.comparison-main
    - data.send(comparisons).each do |comparison|
      %tr
        %th.comparison-key{ colspan: "3" }
          = comparison["benefit"]
      %tr
        %td.comparison-value= parse_boolean(comparison["onsite"], image_tag("icons/icon-check.png"), image_tag("icons/icon-cross-red.png"))
        %td.comparison-value= parse_boolean(comparison["remote"], image_tag("icons/icon-check.png"), image_tag("icons/icon-cross-red.png"))
  %tfoot.comparison-footer
    %tr
      %td
        %h2.statistic.comparison-footer__statistic £#{stats.onsite_cost}
      %td
        %h2.statistic.comparison-footer__statistic.statistic--alt-color
          = link_to("£#{stats.remote_cost}", 'http://blog.makersacademy.com/changingourprices/', target: "_blank")
